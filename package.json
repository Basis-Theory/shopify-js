{
  "name": "@basis-theory/shopify-js",
  "version": "1.0.1",
  "description": "Basis Theory utility for decrypting Shopify Payment App Session payload",
  "repository": {
    "type": "git",
    "url": "https://github.com/Basis-Theory/shopify-js"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Basis Theory",
    "email": "support@basistheory.com"
  },
  "source": "src/index.ts",
  "types": "dist/types.d.ts",
  "main": "dist/index.js",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "yarn clean && concurrently 'yarn build:module' 'yarn build:package' --kill-others-on-fail -g",
    "build:module": "parcel build",
    "build:package": "node prepare.js",
    "lint": "eslint . --quiet --ignore-path .gitignore",
    "lint:fix": "eslint . --fix --ignore-path .gitignore",
    "clean": "rimraf dist",
    "prepare": "yarn build",
    "release": "semantic-release",
    "test": "jest",
    "test:cov": "jest --coverage",
    "pretty-quick": "pretty-quick --staged",
    "postinstall": "husky install"
  },
  "targets": {
    "main": {
      "sourceMap": false
    }
  },
  "prettier": "@basis-theory/eslint-config/prettier",
  "dependencies": {
    "ec-key": "^0.0.4"
  },
  "devDependencies": {
    "@basis-theory/eslint-config": "^1.2.0",
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@parcel/packager-ts": "2.10.3",
    "@parcel/transformer-typescript-types": "2.10.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@semantic-release/npm": "^11.0.2",
    "@semantic-release/release-notes-generator": "^11.0.7",
    "@types/jest": "^29.5.11",
    "@types/node": "^16.18.68",
    "concurrently": "^8.2.2",
    "eslint": "^7.32.0",
    "husky": "^9.0.10",
    "jest": "^29.7.0",
    "parcel": "^2.10.3",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3",
    "rimraf": "^5.0.5",
    "semantic-release": "^23.0.0",
    "ts-jest": "^29.1.1",
    "typescript": "^4.9.5"
  },
  "resolutions": {
    "@babel/traverse": "^7.23.2",
    "msgpackr": "^1.10.1",
    "semver": "^7.5.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "shopify",
    "payment app",
    "encryption",
    "decrypt",
    "token",
    "node",
    "elliptic curve"
  ]
}
